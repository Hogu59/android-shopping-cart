<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="count"
            type="woowacourse.shopping.domain.model.Count" />

        <variable
            name="countHandler"
            type="woowacourse.shopping.presentation.ui.counter.DefaultCounterHandler" />

        <variable
            name="viewModel"
            type="woowacourse.shopping.presentation.ui.detail.DetailViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.shopping.ShoppingActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar_detail"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/gray_500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_menu_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:onClick="@{() -> viewModel.moveBack()}"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/iv_detail_product_image"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:scaleType="fitXY"
            app:imageUrl="@{viewModel.product.imageUrl}"
            app:layout_constraintTop_toBottomOf="@id/toolbar_detail"
            tools:layout_editor_absoluteX="-157dp"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_detail_product_name"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_margin="18dp"
            android:text="@{viewModel.product.name}"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_detail_product_image"
            tools:text="[든든] 동원 스위트콘" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_product_name" />


        <TextView
            android:id="@+id/tv_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_quantity"
            app:layout_constraintBottom_toBottomOf="@id/btn_quantity"
            app:price="@{viewModel.product.price*viewModel.count.amount}"
            tools:text="99,800원" />

        <include
            android:id="@+id/btn_quantity"
            layout="@layout/product_quantity_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:countHandler="@{countHandler}"
            app:count="@{count}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/btn_put_cart"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/green_300"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="@{() -> viewModel.addCartItem(viewModel.product.id)}"
            android:text="장바구니 담기"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
